            @RenderBody()
        </main>

        <div class="player-bar">
            <div class="player-slider-container" id="progBar">

                <div id="hoverTooltip" class="hover-time">0:00</div>

                <div class="player-track">
                    <div class="player-fill" id="progFill">
                        <div class="player-thumb"></div>
                    </div>
                </div>
            </div>


            <div class="player-info">
                <div class="player-cover">
                    <img id="playerImg" src=""
                         style="width:100%; height:100%; object-fit:cover; display:none;"
                         onload="this.style.display='block'; document.getElementById('playerPlaceholder').style.display='none';"
                         onerror="this.style.display='none'; document.getElementById('playerPlaceholder').style.display='block';" />

                    <svg id="playerPlaceholder" viewBox="0 0 24 24" style="width:20px; height:20px; fill:#586380; opacity:0.7;">
                        <path d="M12 3v9.28c-.47-.17-.97-.28-1.5-.28C8.01 12 6 14.01 6 16.5S8.01 21 10.5 21c2.31 0 4.2-1.75 4.45-4H15V6h4V3h-7z" />
                    </svg>
                </div>
                <div style="display:flex; flex-direction:column; justify-content:center;">
                    <div id="playerTitle" style="color:white; font-weight:600; font-size:14px; width:160px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">Song Title</div>
                    <div id="playerArtist" style="color:var(--text-secondary); font-size:12px; width:160px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">Artist Name</div>
                </div>
            </div>

            <div style="display:flex; align-items:center; justify-content:center;">
                <button class="prev control-btn" style="width:35px; height:35px;">
                    <svg viewBox="0 0 15 14"><path d="M 12,0 L 12,14 L 0,7 Z M 0,0 L 3,0 L 3,14 L 0,14 Z" /></svg>
                </button>

                <button class="play-btn" id="mainPlayBtn" onclick="toggleMainPlay()">
                    <svg id="iconPlay" viewBox="0 0 16 18" style="display:block;"><path d="M 0,0 L 16,9 L 0,18 Z" /></svg>
                    <svg id="iconPause" viewBox="0 0 16 18" style="display:none;"><path d="M 0,0 L 5,0 L 5,16 L 0,16 Z M 9,0 L 14,0 L 14,16 L 9,16 Z" /></svg>
                </button>

                <button class="next control-btn" style="width:35px; height:35px;">
                    <svg viewBox="0 0 15 14"><path d="M 0,0 L 0,14 L 12,7 Z M 12,0 L 15,0 L 15,14 L 12,14 Z" /></svg>
                </button>
            </div>

            <div class="player-options">
                <div style="font-size:12px; font-weight:500; color:var(--text-secondary); margin-right:15px;">
                    <span id="currTime">0:00</span> <span style="color:#586380">/</span> <span id="durTime">0:00</span>
                </div>

                <button class="queue-btn">
                    <svg viewBox="0 0 24 24"><path d="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z" /></svg>
                </button>
            </div>
        </div>
