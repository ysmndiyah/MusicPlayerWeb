    <audio id="globalAudio" ontimeupdate="updateGlobalProgress()" onended="globalAudioEnded()"></audio>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const audio = document.getElementById('globalAudio');
        const playBtn = document.getElementById('mainPlayBtn');
        const iconPlay = document.getElementById('iconPlay');
        const iconPause = document.getElementById('iconPause');
        const progFill = document.getElementById('progFill');

        let isPlaying = false;

                function playStream(id, title, artist, coverUrl) { // Parameter ke-4 sekarang adalah URL
            audio.src = '/Music/PlayStream?id=' + id;

            document.getElementById('playerTitle').innerText = title;
            document.getElementById('playerArtist').innerText = artist || "Unknown";

            // Set src gambar.
            const pImg = document.getElementById('playerImg');

            // Reset dulu biar gak kedip gambar lagu sebelumnya
            pImg.style.display = 'none';
            document.getElementById('playerPlaceholder').style.display = 'block';

            // Masukkan URL baru
            pImg.src = coverUrl;

            audio.play();
            setPlayState(true);
        }

        function toggleMainPlay() {
            if(!audio.src) return;
            if(isPlaying) {
                audio.pause();
                setPlayState(false);
            } else {
                audio.play();
                setPlayState(true);
            }
        }

        function setPlayState(playing) {
            isPlaying = playing;
            if(playing) {
                iconPlay.style.display = 'none';
                iconPause.style.display = 'block';
                playBtn.classList.add('playing');
            } else {
                iconPlay.style.display = 'block';
                iconPause.style.display = 'none';
                playBtn.classList.remove('playing');
            }
        }

        function updateGlobalProgress() {
            if(audio.duration) {
                const pct = (audio.currentTime / audio.duration) * 100;
                progFill.style.width = pct + '%';
                document.getElementById('currTime').innerText = fmtTime(audio.currentTime);
                document.getElementById('durTime').innerText = fmtTime(audio.duration);
            }
        }

        function globalAudioEnded() {
            setPlayState(false);
            progFill.style.width = '0%';
        }

        function fmtTime(s) {
            const m = Math.floor(s/60);
            const sec = Math.floor(s%60);
            return m + ":" + (sec < 10 ? "0"+sec : sec);
        }

        document.getElementById('progBar').addEventListener('click', (e) => {
            if(!audio.duration) return;
            const rect = e.currentTarget.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const pct = x / rect.width;
            audio.currentTime = pct * audio.duration;
        });

        function addFolderPrompt() {
            // Karena browser memblokir pengambilan path D:\ dari File Explorer demi keamanan,
            // cara paling valid di Web adalah meminta user memasukkan pathnya.
            // Jika Anda menjalankan ini di Localhost (Laptop sendiri), path Windows valid.
            let path = prompt("Masukkan alamat folder musik (Contoh: D:\\Lagu\\Pop):", "D:\\");

            if (path != null && path.trim() !== "") {
                document.getElementById("inputFolderPath").value = path;
                document.getElementById("formAddFolder").submit();
            }
        }

            // ==========================================
        // SPA NAVIGATION (Agar Lagu Tidak Berhenti)
        // ==========================================

        // 1. Tangkap klik pada link navigasi (.nav-btn) DAN link konten (.ajax-link)
        document.addEventListener('click', function (e) {
            // Cari elemen <a> terdekat yang diklik
            const link = e.target.closest('a');

            // Pastikan itu link, punya href, DAN (punya class 'nav-btn' ATAU 'ajax-link')
            if (link && link.getAttribute('href') &&
               (link.classList.contains('nav-btn') || link.classList.contains('ajax-link'))) {

                e.preventDefault(); // STOP reload halaman (agar lagu tidak mati)!
                const url = link.getAttribute('href');
                loadPage(url);
            }
        });

        // 2. Fungsi Load Halaman via AJAX
        function loadPage(url) {
            // Ubah URL di address bar tanpa reload
            history.pushState(null, '', url);

            // Update tampilan tombol aktif di sidebar
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            // Cari link yang href-nya mirip dengan url ini dan aktifkan
            const activeLink = document.querySelector(`.nav-btn[href="${url}"]`);
            if(activeLink) activeLink.classList.add('active');

            // Fetch konten baru
            fetch(url, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest' // Tandai sebagai AJAX
                }
            })
            .then(response => response.text())
            .then(html => {
                // Ganti isi .main-content dengan HTML baru
                const contentDiv = document.querySelector('.main-content');

                // Efek Fade Out dikit biar halus
                contentDiv.style.opacity = 0;

                setTimeout(() => {
                    contentDiv.innerHTML = html;
                    contentDiv.style.opacity = 1;
                }, 150);
            })
            .catch(err => console.error('Gagal load halaman:', err));
        }

        // 3. Handle tombol Back/Forward browser
        window.addEventListener('popstate', function () {
            // Load ulang konten sesuai URL saat tombol back ditekan
            fetch(location.href, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(res => res.text())
            .then(html => {
                document.querySelector('.main-content').innerHTML = html;
            });
        });

            const hoverTooltip = document.getElementById('hoverTooltip');
        const progBar = document.getElementById('progBar');

        // Logic Hover Time
        progBar.addEventListener('mousemove', (e) => {
            // Cek jika durasi audio valid
            if (!audio.duration || isNaN(audio.duration)) return;

            // 1. Hitung posisi mouse relatif terhadap bar
            const rect = progBar.getBoundingClientRect();
            const offsetX = e.clientX - rect.left;

            // 2. Hitung persentase posisi (0.0 - 1.0)
            let percent = offsetX / rect.width;

            // Batasi agar tidak lewat batas (0% - 100%)
            if (percent < 0) percent = 0;
            if (percent > 1) percent = 1;

            // 3. Konversi ke detik
            const hoverTime = audio.duration * percent;

            // 4. Update Teks Tooltip
            hoverTooltip.innerText = fmtTime(hoverTime);

            // 5. Pindahkan posisi Tooltip mengikuti mouse
            hoverTooltip.style.left = offsetX + 'px';
        });

        // Sembunyikan saat mouse keluar (opsional, sudah dihandle CSS tapi ini buat jaga-jaga)
        progBar.addEventListener('mouseleave', () => {
            hoverTooltip.style.display = 'none';
        });

        progBar.addEventListener('mouseenter', () => {
            if (audio.duration) hoverTooltip.style.display = 'block';
        });

            function rescanLibrary() {
            // Tampilkan indikator loading (opsional, bisa alert sederhana dulu)
            const btn = document.querySelector('button[onclick="rescanLibrary()"]');
            const originalText = btn.innerHTML;
            btn.innerHTML = 'Scanning...';
            btn.disabled = true;

            fetch('/Music/ScanFolder', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (response.ok) {
                    // Refresh halaman konten saat ini untuk melihat perubahan
                    // Kita gunakan fungsi loadPage yang sudah ada untuk refresh "soft"
                    const currentUrl = window.location.href;
                    loadPage(currentUrl);
                }
            })
            .catch(error => console.error('Error rescanning:', error))
            .finally(() => {
                // Kembalikan tombol ke semula
                btn.innerHTML = originalText;
                btn.disabled = false;
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
