            <div class="sidebar-footer">
                <button class="nav-btn" onclick="addFolderPrompt()" style="border: 1px solid #2A3550; justify-content: center; margin-top: 10px; color: var(--accent-color);">
                    <svg viewBox="0 0 24 24" style="fill: var(--accent-color); margin-right: 8px;">
                        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
                    </svg>
                    <b style="color: var(--accent-color);">Add Folder</b>
                </button>

                <div style="margin-top: 10px; border-top: 1px solid #2A3550; padding-top: 5px;">
